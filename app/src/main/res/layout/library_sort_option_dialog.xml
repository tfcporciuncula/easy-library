<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <TextView
    android:id="@+id/ascendingTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:ellipsize="end"
    android:focusable="true"
    android:maxLines="1"
    android:paddingStart="@dimen/standard_margin"
    android:paddingTop="@dimen/standard_margin"
    android:paddingEnd="@dimen/sort_option_padding_end"
    android:paddingBottom="@dimen/standard_margin"
    android:text="@string/sort_option_ascending"
    android:textAppearance="?textAppearanceSubtitle1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/descendingTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:ellipsize="end"
    android:focusable="true"
    android:maxLines="1"
    android:paddingStart="@dimen/standard_margin"
    android:paddingTop="@dimen/standard_margin"
    android:paddingEnd="@dimen/sort_option_padding_end"
    android:paddingBottom="@dimen/standard_margin"
    android:text="@string/sort_option_descending"
    android:textAppearance="?textAppearanceSubtitle1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ascendingTextView"
    />

  <ImageView
    android:id="@+id/ascendingCheckImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/standard_margin"
    android:contentDescription="@string/sort_option_check_icon_content_description"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/ascendingTextView"
    app:srcCompat="@drawable/ic_check"
    app:tint="?colorAccent"
    />

  <ImageView
    android:id="@+id/descendingCheckImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/standard_margin"
    android:contentDescription="@string/sort_option_check_icon_content_description"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/descendingTextView"
    app:srcCompat="@drawable/ic_check"
    app:tint="?colorAccent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
